<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/txRegis"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/tRegistrasi"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="120dp"/>

    <EditText
        android:id="@+id/edNama"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/txRegis"
        android:hint="@string/tNama"
        android:textColorHint="@color/grey"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edTTL"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edNama"
        android:hint="@string/tTTL"
        android:textColorHint="@color/grey"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edTTL"
        android:hint="@string/temail"
        android:textColorHint="@color/grey"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edAlamat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edEmail"
        android:hint="@string/tAlamat"
        android:textColorHint="@color/grey"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btnRegis"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/edAlamat"
        android:layout_centerInParent="true"
        android:layout_marginBottom="12dp"
        android:text="@string/txbtnRegis" />

</RelativeLayout>